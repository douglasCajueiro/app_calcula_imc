<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imgSplashCircle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toTopOf="@+id/txtCalculadoraDeIMC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/splash_circle_bkg" />

    <TextView
        android:id="@+id/txtCalculadoraDeIMC"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginBottom="100dp"
        android:text="Calculadora de IMC"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgSplashPointer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSplashCircle"
        app:layout_constraintEnd_toEndOf="@+id/imgSplashCircle"
        app:layout_constraintStart_toStartOf="@+id/imgSplashCircle"
        app:layout_constraintTop_toTopOf="@+id/imgSplashCircle"
        app:srcCompat="@drawable/splash_circle_pointer_green" />
</androidx.constraintlayout.widget.ConstraintLayout>